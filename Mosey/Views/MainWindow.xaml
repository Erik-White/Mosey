<Controls:MetroWindow
        x:Class="Mosey.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns:local="clr-namespace:Mosey"
        xmlns:Views="clr-namespace:Mosey.Views"
        xmlns:ViewModels="clr-namespace:Mosey.ViewModels"
        xmlns:Converters="clr-namespace:Mosey.ViewModels.Converters"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:CustomControls="clr-namespace:Mosey.Models.Controls"
        xmlns:IconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Mosey"
        WindowStartupLocation="CenterScreen"
        Height="600"
        Width="800"
        MinHeight="400"
        MinWidth="600"
        Style="{StaticResource StyleBase}"
        GlowBrush="{DynamicResource AccentColorBrush}"
        >
    <!--
    Data context is set at window instantiation
    <Window.DataContext>
        <ViewModels:MainViewModel />
    </Window.DataContext>
    -->
    <Window.Resources>
        <CollectionViewSource x:Key="ScannerDevicesOrdered" Source="{Binding Path=ScannerDevices}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="ID" Direction="Ascending" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        <Converters:ValueConverterGroup x:Key="BooleanToInvertedVisibilityConverter">
            <Converters:BoolToInvertedBoolConverter />
            <BooleanToVisibilityConverter />
        </Converters:ValueConverterGroup>
        <Thickness x:Key="VerticalMargin">0 15 0 15</Thickness>
        <Thickness x:Key="HorizontalMargin">15 0 15 0</Thickness>
        <Thickness x:Key="LabelMargin">0 5 0 0</Thickness>
    </Window.Resources>

    <Border BorderThickness="15" BorderBrush="White" Background="WhiteSmoke">
        <DockPanel MinHeight="100" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <!--#region Header and logo -->
            <TextBlock DockPanel.Dock="Top" Text="MOSEY" Margin="15" />
            <!--#endregion Header and logo -->
            <!--#region Sequence controls -->
            <Grid DockPanel.Dock="Top" Margin="{StaticResource VerticalMargin}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="150" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="30" />
                    <RowDefinition MinHeight="30" />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!-- Scan options -->
                <Label Content="Interval time (minutes)" Margin="{StaticResource HorizontalMargin}" Padding="0" Grid.Column="0" Grid.Row="0" />
                <Controls:NumericUpDown Value="{Binding Path=ScanInterval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsScanRunning, Converter={Converters:BoolToInvertedBoolConverter}}" Style="{StaticResource NumericUpDownBase}" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="0" />
                <Label Content="Total repetitions" Margin="{StaticResource HorizontalMargin}" Padding="0" Grid.Column="2" Grid.Row="0" HorizontalContentAlignment="Right" />
                <Controls:NumericUpDown Value="{Binding Path=ScanRepetitions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsScanRunning, Converter={Converters:BoolToInvertedBoolConverter}}" Style="{StaticResource NumericUpDownNormal}" HorizontalAlignment="Stretch" Grid.Column="3" Grid.Row="0" />
                <Label Content="Save location" Margin="{StaticResource HorizontalMargin}" Padding="0" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" />
                <TextBlock Background="White" IsEnabled="{Binding IsScanRunning, Converter={Converters:BoolToInvertedBoolConverter}}" Padding="5" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" />
                <!--
                <Button Command="{Binding Path=StartStopScanCommand}" IsEnabled="True" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Height="Auto" Width="Auto" MinHeight="40" MinWidth="150" Margin="20 0 10 0" Padding="10" Grid.Column="4"  Grid.RowSpan="2" Background="{StaticResource MahApps.Brushes.Accent}">
                    <IconPacks:Material Kind="ArrowRightDropCircle" />
                </Button>
                -->
                <!-- Start/Stop scanning -->
                <ToggleButton Command="{Binding Path=StartStopScanCommand}" IsEnabled="True" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Height="Auto" Width="Auto" MinHeight="40" MinWidth="150" Margin="30 0 15 0" Grid.Column="4"  Grid.RowSpan="2" Background="{StaticResource MahApps.Brushes.Accent}" Foreground="{StaticResource MahApps.Brushes.AccentSelectedColor}" Cursor="Hand">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard Name="HighlightAnim">
                                            <Storyboard TargetProperty="Opacity" AutoReverse="True" RepeatBehavior="Forever">
                                                <DoubleAnimation From="1" To="0.2" Duration="00:00:01"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <StopStoryboard BeginStoryboardName="HighlightAnim"/>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                    <IconPacks:Material Kind="PlayCircle" Height="40" Width="40" />
                </ToggleButton>
                <ToggleButton Command="{Binding Path=StopScanCommand}" Visibility="{Binding Path=IsScanRunning, Converter={StaticResource BooleanToVisibilityConverter}}" IsEnabled="True" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Height="Auto" Width="Auto" MinHeight="40" MinWidth="150" Margin="30 0 15 0" Grid.Column="4"  Grid.RowSpan="2" Background="{StaticResource MahApps.Brushes.Accent}" Foreground="{StaticResource MahApps.Brushes.AccentSelectedColor}" Cursor="Hand">
                    <IconPacks:Material Kind="CloseCircle" Height="40" Width="40" Spin="True" SpinDuration="3.5"  />
                </ToggleButton>
                <!-- Advanced options -->
                <!--
                <Label Content="Run analysis on completion" Grid.Column="0" Grid.Row="2" Margin="{StaticResource HorizontalMargin}" />
                <Controls:ToggleSwitchButton IsChecked="False"  IsEnabled="{Binding IsScanRunning, Converter={Converters:BoolToInvertedBoolConverter}}" Margin="{StaticResource HorizontalMargin}" Padding="5" Grid.Column="0" Grid.Row="3" />
                <Label Content="Image format" Grid.Column="1" Grid.Row="2" Margin="{StaticResource HorizontalMargin}" />
                <Controls:DropDownList  IsEnabled="{Binding IsScanRunning, Converter={Converters:BoolToInvertedBoolConverter}}" Margin="{StaticResource HorizontalMargin}" Padding="5" Grid.Column="1" Grid.Row="3" />
                -->
            </Grid>
            <!--#endregion Sequence controls -->
            <!--#region Progress information -->
            <Grid DockPanel.Dock="Top" Background="{StaticResource MahApps.Brushes.Gray1}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="150" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="20" />
                    <RowDefinition MinHeight="80" />
                    <RowDefinition MinHeight="20" />
                </Grid.RowDefinitions>
                <!-- Scans completed -->
                <Label Content="Completed" Margin="{StaticResource HorizontalMargin}" Padding="0" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" />
                <TextBlock Text="{Binding ScanRepetitionsCount, FallbackValue='0'}" Margin="{StaticResource HorizontalMargin}" Padding="0" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontSize="60" />
                <Label Content="scans" Margin="{StaticResource HorizontalMargin}" Padding="0" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" />
                <!-- Next scan -->
                <Label Content="Next scan" Margin="{StaticResource HorizontalMargin}" Padding="0" Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" />
                <Label Content="{Binding ScanNextTime, FallbackValue=''}" ContentStringFormat="mm':'ss" Margin="{StaticResource HorizontalMargin}" Padding="0" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontSize="60" />
                <!-- Finish time -->
                <Label Content="Finish time" Margin="{StaticResource HorizontalMargin}" Padding="0" Grid.Column="4" Grid.Row="0" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" />
                <Label Content="{Binding ScanFinishTime}" ContentStringFormat="HH:mm" Margin="{StaticResource HorizontalMargin}" Padding="0" Grid.Column="4" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontSize="60" />
                <Label Content="{Binding ScanFinishTime}" ContentStringFormat="dddd dd" Visibility="{Binding IsScanRunning, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="{StaticResource HorizontalMargin}" Padding="0" Grid.Column="4" Grid.Row="2" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" />
                <!--#endregion Progress information -->
            </Grid>
            <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Button Command="{Binding Path=RefreshScannersCommand}" Content="Refresh scanners" />
                    <Button Command="{Binding Path=EnableScannersCommand}" Content="Enable all scanners" />
                    <Button Command="{Binding Path=ManualScanCommand}" Content="Manual scan" />
                </StackPanel>
            </StackPanel>
            <!--#region Display scanners and their properties -->
            <ScrollViewer DockPanel.Dock="Top" Visibility="{Binding ScannerDevices.IsEmpty, Converter={StaticResource BooleanToInvertedVisibilityConverter}}" VerticalScrollBarVisibility="Visible" VerticalAlignment="Stretch">
                <ItemsControl ItemsSource="{Binding Source={StaticResource ScannerDevicesOrdered}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid VerticalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition MinHeight="60" />
                                    <RowDefinition MinHeight="40" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="{Binding Name}" Grid.Column="0" Grid.ColumnSpan="4" />
                                <TextBlock Text="{Binding ID}" Grid.Column="0" Grid.Row="1" />
                                <TextBlock Text="Connected" Visibility="{Binding IsConnected, Converter={StaticResource BooleanToVisibilityConverter}}" Grid.Column="1" Grid.Row="1" />
                                <Controls:ToggleSwitchButton Content="Enable scanning" IsChecked="{Binding Path=IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsScanning, Converter={Converters:BoolToInvertedBoolConverter}}" Cursor="Hand" Grid.Column="2" Grid.Row="1" />
                                <TextBlock Text="{Binding ErrorState.Message}" Grid.Column="2" Grid.Row="1" />
                                <Label Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}" Style="{StaticResource IconNormal}" Grid.Column="4" Grid.RowSpan="2">
                                    <IconPacks:Material Kind="DotsHorizontalCircle" Spin="True" SpinDuration="3.5" Height="40" Width="40" />
                                </Label>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <!-- Display a message if no scanners found -->
            <StackPanel DockPanel.Dock="Top" Visibility="{Binding ScannerDevices.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" HorizontalAlignment="Center">
                <TextBlock Text="Waiting for scanners" Style="{StaticResource TextBlockHeading}" />
                <Label Style="{StaticResource IconExtraLarge}">
                    <IconPacks:Material Kind="Brightness5" Spin="True" SpinDuration="2" Height="80" Width="80" />
                </Label>
            </StackPanel>
            <!--#endregion Display scanners and their properties -->
        </DockPanel>
    </Border>
</Controls:MetroWindow>
