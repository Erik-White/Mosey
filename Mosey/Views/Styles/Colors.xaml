<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Mosey.Views.Styles"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <SolidColorBrush x:Key="FontColor.Default">#808080</SolidColorBrush>
    <SolidColorBrush x:Key="FontColor.Heading">#708090</SolidColorBrush>
    <SolidColorBrush x:Key="FontColor.Light">#FFFFFF</SolidColorBrush>
    <SolidColorBrush x:Key="FontColor.Dark">#483D8B</SolidColorBrush>

    <SolidColorBrush x:Key="Color.Info">#17A2B8</SolidColorBrush>
    <SolidColorBrush x:Key="Color.Warning">#FFC107</SolidColorBrush>
    <SolidColorBrush x:Key="Color.Error">#DC3545</SolidColorBrush>
    <SolidColorBrush x:Key="Color.Success">#28A745</SolidColorBrush>

    <SolidColorBrush x:Key="Color.Overlay.Light">#7FFFFFFF</SolidColorBrush>
    <SolidColorBrush x:Key="Color.Overlay.Dark">#70000000</SolidColorBrush>

</ResourceDictionary>