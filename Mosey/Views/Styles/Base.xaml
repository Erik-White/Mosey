<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Mosey.Views.Styles"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <Thickness x:Key="Margin.Default">15</Thickness>
    <Thickness x:Key="Margin.Tiny">5</Thickness>
    <Thickness x:Key="Margin.Narrow">10</Thickness>
    <Thickness x:Key="Margin.Wide">20</Thickness>

    <Thickness x:Key="Padding.Default">15</Thickness>
    <Thickness x:Key="Padding.Tiny">5</Thickness>
    <Thickness x:Key="Padding.Narrow">10</Thickness>
    <Thickness x:Key="Padding.Wide">20</Thickness>

    <sys:Int16 x:Key="Radius.Default">8</sys:Int16>
    <sys:Int16 x:Key="Radius.Narrow">3.5</sys:Int16>
    <sys:Int16 x:Key="Radius.Wide">12</sys:Int16>

    <sys:Double x:Key="Default">15</sys:Double>
    <sys:Double x:Key="Tiny">5</sys:Double>
    <sys:Double x:Key="Narrow">10</sys:Double>
    <sys:Double x:Key="Wide">20</sys:Double>

    <Style x:Key="StyleBase" TargetType="{x:Type Control}">
        <Setter Property="Foreground" Value="{StaticResource FontColor.Default}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.Default}" />
        <Setter Property="FontStyle" Value="Normal" />
    </Style>
    
</ResourceDictionary>